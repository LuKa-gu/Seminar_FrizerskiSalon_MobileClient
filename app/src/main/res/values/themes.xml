<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FrizerskiSalon_MobileClient" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Surface -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <!-- Optional: nicer status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FrizerskiSalon_MobileClient" parent="Base.Theme.FrizerskiSalon_MobileClient" />
</resources>