<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNazaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nazaj"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <!-- Naslov -->
        <TextView
            android:id="@+id/tvNaslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rezerviraj_termin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/outline_content_cut_24"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/tvStoritve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tvFrizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tvDan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tvTrajanje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tvBloki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            app:dividerThickness="1dp"/>

        <!-- Ura termina -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/izberi_uro_termina"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Opombe -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOpombe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/opombe"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Potrdi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPotrdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/potrdi"
            android:layout_marginTop="12dp"
            android:paddingVertical="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>
</ScrollView>
